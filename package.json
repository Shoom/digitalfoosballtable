{
  "name": "digitalfoosballtable",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "rm -rf build && razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "start:prod": "NODE_ENV=production node build/server.js"
  },
  "dependencies": {
    "express": "^4.15.3",
    "express-eventsource": "^0.0.4",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "read-pkg-up": "^2.0.0",
    "sse-express": "^1.0.2",
    "styled-components": "^2.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.0.35",
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.1",
    "@types/react": "^16.0.10",
    "@types/react-dom": "^16.0.1",
    "@types/webpack-env": "^1.13.0",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "razzle": "^0.8.4",
    "ts-jest": "^21.1.2",
    "ts-loader": "^2.3.4",
    "typescript": "^2.3.4"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "^.+\\.css$": "<rootDir>/node_modules/razzle/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  },
  "resolutions": {
    "**/@types/react": "16.0.10",
    "**/@types/react-dom": "16.0.1"
  }
}
